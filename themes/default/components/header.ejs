    <script>
        // JavaScript to redirect if the screen width is smaller than 768 pixels (adjust as needed)
        function checkScreenSize() {
            if (window.innerWidth < 768) {
                window.location.href = '/mobile';
            }
        }

        // Execute the function when the page loads and on window resize
        window.onload = checkScreenSize;
        window.onresize = checkScreenSize;
    </script>
